@model ATeamFitness.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div><div class="form-group">
                <label asp-for="FitnessGoal">Select Fitness Goal:&nbsp;</label><select id="FitnessGoal" name="FitnessGoal">
                    <option value="Bulking">Bulking</option>
                    <option value="Lose Weight">Lose Weight</option>
                    <option value="Get Shredded">Get Shredded</option>
                </select>
                </div>
                <div hidden class="form-group">
                    <label asp-for="FitnessPlan" class="control-label"></label>
                    <input asp-for="FitnessPlan" class="form-control" />
                    <span asp-validation-for="FitnessPlan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PictureUrl" class="control-label"></label>
                    <input asp-for="PictureUrl" class="form-control" />
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>
                <div hidden class="form-group">
                    <label asp-for="DietPlan" class="control-label"></label>
                    <input asp-for="DietPlan" class="form-control" />
                    <span asp-validation-for="DietPlan" class="text-danger"></span>
                </div>
                <div hidden class="form-group">
                    <label asp-for="IdentityUserId" class="control-label"></label>
                    <select asp-for="IdentityUserId" class="form-control" asp-items="ViewBag.IdentityUserId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
